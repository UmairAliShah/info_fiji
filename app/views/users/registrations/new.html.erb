<% content_for :title, "User Sign-Up | Info Fiji" %>
<div class="container" style="padding-top: 20px;">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 no-pad-xs">
      <div class="row login_signup_heading" style="padding:0px;margin:0px;">
        <div class="col-md-12">
          <center><h3 class="heading_text">Sign-Up</h3></center>
        </div>
      </div>
      <div class="jumbotron" style="padding-top:1em;padding-bottom:1em; background-color: rgba(48,110,255,0.4); border-radius:0 0 1em 1em;">
        <div class="row">
          <div class="col-md-1"></div>
          <div class="col-md-10 login_signup_panel">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

                 <div class="form-group" style="padding:0px;margin:0px;">
                   <%= f.label :email, class: "login_signup_label" %><br />
                   <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'E-mail',class: 'form-control my_text_field', required: true %>
                 </div>

                 <div class="form-group" style="padding:0px;margin:0px;">
                   <%= f.label :password, class: "login_signup_label" %>
                   <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'my_text_field form-control',required: true%>
                 </div>

                 <div class="form-group" style="padding:0px;margin:0px 0px 15px 0px;">
                   <%= f.label :password_confirmation, class: "login_signup_label" %><br />
                   <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password', class: 'form-control my_text_field', required: true%>
                 </div>

                 <div class="form-group" style="padding:0px;margin:0px;border-radius:0px;">
                    <center>
                      <div class="row">
                        <div class="col-md-4">
                          <label class="col-md-12 btn btn-block role_div" onclick="callme(this)" style="padding:0px;margin:0px;border-radius:0px;">
                            <div class="col-md-12">
                               <center>
                                 <%= f.radio_button :role, 1, style:"display:none;", required: true%>
                                 <h6 class="heading_text">Residential</h6>
                               </center>
                            </div>
                          </label>
                        </div>
                        <div class="col-md-4">
                          <label class="col-md-12 btn btn-block role_div" onclick="callme(this)" style="padding:0px;margin:0px;border-radius:0px;">
                            <div class="col-md-12">
                               <center>
                                 <%= f.radio_button :role, 2, style:"display:none;", required: true%>
                                 <h6 class="heading_text" style="text-align:left;">Professional</h6>
                               </center>
                            </div>
                          </label>
                        </div>
                        <div class="col-md-4">
                          <label class="col-md-12 btn btn-block role_div" onclick="callme(this)" style="padding:0px;margin:0px;border-radius:0px;">
                            <div class="col-md-12">
                               <center>
                                 <%= f.radio_button :role, 3, style:"display:none;", required: true%>
                                 <h6 class="heading_text">Business</h6>
                               </center>
                            </div>
                          </label>
                        </div>
                      </div>
                    </center>
                 </div>
                 <br>
                 <div class="form-group">
                   <%= f.submit "Sign up" ,class: 'btn btn-block btn-outline btn-primary active_button', style: "font-weight:bold;font-family: 'Merriweather', serif; color:#FFFFFF" %>
                 </div>
            <% end %>
            <%= render "users/shared/links" %>
          </div>
          <div class="col-md-1"></div>
        </div>
      </div>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>
