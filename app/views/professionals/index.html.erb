<h1>Professionals</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Gender</th>
      <th>Skype</th>
      <th>Whatsapp</th>
      <th>About</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professionals.each do |professional| %>
      <tr>
        <td><%= professional.first_name %></td>
        <td><%= professional.last_name %></td>
        <td><%= professional.gender %></td>
        <td><%= professional.skype %></td>
        <td><%= professional.whatsapp %></td>
        <td><%= professional.about %></td>
        <td><%= professional.user %></td>
        <td><%= link_to 'Show', professional %></td>
        <td><%= link_to 'Edit', edit_professional_path(professional) %></td>
        <td><%= link_to 'Destroy', professional, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

